{
  "manifest_version": 3,
  "name": "YouTube 'Skip Ad' Clicker",
  "version": "1.0",
  "description": "A helper for skipping YouTube ads that have the 'Skip Ad' button.",
  "action": {
    "default_popup": "ext/index.html"
  },
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "js": ["ext/logger.js", "ext/utils.js", "ext/css-utils.js", "content.js"],
      "matches": ["https://*.youtube.com/*", "https://youtube.com/*"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "ext/icon.png",
    "32": "ext/icon.png",
    "48": "ext/icon.png",
    "128": "ext/icon.png"
  }
}
